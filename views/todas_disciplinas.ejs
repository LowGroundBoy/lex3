<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/todas_disciplinas.css">
  </head>

  <body>
   
    <%- include("partials/header") %>
    <%- include("partials/message") %>

    <div class="pagina">
      <h1>Disciplinas</h1>

    <% if(todas_disciplinas) { %> 
      <% for (let disciplina of todas_disciplinas) { %>
        <a href="/materiais"
             class="card"
             style="--cor-linha: hsl(<%= Math.floor(Math.random()*360) %>, 70%, 50%);">
          <p>
            <label class="info-label">
              <strong>Disciplina:</strong> <%= disciplina.nomeDisciplina %>
            </label>
          </p>
          <p>
            <label class="info-label">
              <strong>Professor:</strong> 
              <%= disciplina.professorResponsavel ? disciplina.professorResponsavel.nome : "Sem professor" %>
            </label>
          </p>
        </a> 
        <br>
      <% } %>
    <% } else { %>
      <p>nothing to show here</p>
    <% } %>

    </div>

  </body>
</html>
