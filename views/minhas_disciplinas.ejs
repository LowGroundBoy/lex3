<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/minhas_disciplinas.css">
  </head>

  <body>
    
    <%- include("partials/header") %>
    <%- include("partials/message") %>

    <div class="pagina">
      <h1>Disciplinas</h1>

<% if (alunoDoc && alunoDoc.length > 0) { %>
    <% for (const m of alunoDoc) { %>
        <a href="/disciplina/<%= m.disciplina._id %>"
           class="card"
           style="--cor-linha: hsl(<%= Math.floor(Math.random()*360) %>, 70%, 50%);">

            <p>
                <label class="info-label">
                    <strong>Disciplina:</strong> <%= m.disciplina.nomeDisciplina %>
                </label>
            </p>

            <p>
                <label class="info-label">
                    <strong>Professor:</strong>
                    <%= m.disciplina.professorResponsavel.nome %>
                </label>
            </p>

            <p>
                <label class="info-label">
                    <strong>MÃ©dia atual:</strong>
                    <%= m.nota ?? 0.0 %>
                </label>
            </p>

            <p>
                <label class="info-label">
                    <a href="/disciplina/<%= m.disciplina._id %>">Visualizar disciplina</a>
                </label>
            </p>

        </a>

        <br>
    <% } %>
<% } else { %>
    <p>nothing to show here</p>
<% } %>

  </body>
</html>